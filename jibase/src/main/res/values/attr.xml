<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IViewpager">
        <attr name="isEnableSwipe" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="android:orientation" />
        <attr name="isIconOnly" format="boolean" />
        <attr name="isTextOnly" format="boolean" />

        <attr name="itemIcon" format="reference" />
        <attr name="itemIconColor" format="color" />
        <attr name="itemIconSize" format="dimension" />

        <attr name="itemText" format="string" />
        <attr name="itemTextColor" format="color" />
        <attr name="itemTextSize" format="dimension" />

        <attr name="itemDescription" format="string" />
        <attr name="itemDescriptionColor" format="color" />
        <attr name="itemDescriptionSize" format="dimension" />

        <attr name="itemTextGravity" format="integer">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="itemTextLines" format="integer" />
        <attr name="itemTextMaxLines" format="integer" />
        <attr name="itemTextEllipsize" format="integer">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>

        <attr name="itemDescriptionGravity" format="integer">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="itemDescriptionLines" format="integer" />
        <attr name="itemDescriptionMaxLines" format="integer" />
        <attr name="itemDescriptionEllipsize" format="integer">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>
    </declare-styleable>
</resources>