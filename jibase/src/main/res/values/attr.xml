<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IViewpager">
        <attr name="isEnableSwipe" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="android:orientation"/>
        <attr name="isIconOnly" format="boolean"/>
        <attr name="isTextOnly" format="boolean"/>

        <attr name="itemIcon" format="reference"/>
        <attr name="itemIconColor" format="color"/>
        <attr name="itemIconSize" format="dimension"/>

        <attr name="itemText" format="string"/>
        <attr name="itemTextColor" format="color"/>
        <attr name="itemTextSize" format="dimension"/>

        <attr name="itemDescription" format="string"/>
        <attr name="itemDescriptionColor" format="color"/>
        <attr name="itemDescriptionSize" format="dimension"/>
    </declare-styleable>
</resources>